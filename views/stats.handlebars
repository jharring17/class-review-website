<h1>Course Statistics</h1>

<section>
  <h2>Most Reviewed Courses</h2>
  {{#if mostReviewed.length}}
    <ul>
      {{#each mostReviewed}}
        <li>
          <strong>{{courseName}}</strong>
          ({{reviewCount}} reviews, Rating: {{courseRating}})
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No courses found.</p>
  {{/if}}
</section>

