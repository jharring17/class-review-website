{{#if user.userCreated}}
	<div class='mb-3 text-end'>
		<a
			href='/course/editCourse/{{course._id}}'
			class='btn btn-primary d-inline-flex align-items-center gap-2 shadow-sm rounded-pill px-3'
		>
			<i class='bi bi-pencil-square'></i>
			Edit Course
		</a>
	</div>
{{/if}}
<h2>{{course.courseId}}: {{course.courseName}}</h2>
<p>{{course.courseDescription}}</p>
<p>{{course.professor}}</p>

{{!-- Show course rating if available --}}
<p>
    <strong>Rating:</strong>
    {{#if course.courseRating}}
        {{course.courseRating}} ({{course.ratingCount}} reviews)
    {{else}}
        No ratings yet.
    {{/if}}
</p>