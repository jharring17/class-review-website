<h1>Register</h1>

<form id="register-form" action="/register" method="POST">
  <div>
    <label for="firstName">First Name:</label>
    <input type="text" name="firstName" id="firstName" required>
  </div>

  <div>
    <label for="lastName">Last Name:</label>
    <input type="text" name="lastName" id="lastName" required>
  </div>

  <div>
    <label for="username">Username:</label>
    <input type="text" name="username" id="username" required>
  </div>

  <div>
    <label for="password">Password:</label>
    <input type="password" name="password" id="password" required>
  </div>

  <div>
    <label for="confirmPassword">Confirm Password:</label>
    <input type="password" name="confirmPassword" id="confirmPassword" required>
  </div>

  <div>
    <label for="role">Role (user or superuser):</label>
    <input type="text" name="role" id="role">
  </div>

  <div>
    <label for="bio">Bio (optional, max 300 chars):</label>
    <textarea name="bio" id="bio" maxlength="300"></textarea>
  </div>

  <div>
    <label for="imgLink">Profile Image Link (optional):</label>
    <input type="url" name="imgLink" id="imgLink" placeholder="http://example.com/image.jpg">
  </div>

  <button type="submit">Register</button>
</form>

<!-- Attach client-side validation -->
<script src="/js/register.js"></script>
